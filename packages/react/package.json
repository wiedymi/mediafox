{
  "name": "@mediafox/react",
  "version": "1.0.4",
  "description": "React hooks for MediaFox media player",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts --outdir=dist --target=browser --format=esm --minify --external react --external @mediafox/core",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "bun test",
    "lint": "biome lint ./src",
    "format": "biome format ./src",
    "check": "biome check ./src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@mediafox/core": "^1.0.4",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.18"
  },
  "keywords": [
    "react",
    "hooks",
    "video",
    "player",
    "mediafox",
    "mediabunny"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wiedymi/mediafox.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/wiedymi/mediafox/issues"
  },
  "homepage": "https://github.com/wiedymi/mediafox#readme"
}
